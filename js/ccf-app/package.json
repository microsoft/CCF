  "license": "Apache-2.0",
  "devDependencies": {
    "@types/chai": "^4.2.15",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.35",
    "@types/node-forge": "^0.9.7",
    "chai": "^4.3.4",
    "concurrently": "^6.0.0",
    "cross-env": "^7.0.3",
    "mocha": "^8.3.2",
    "node-forge": "^0.10.0",
    "serve": "^11.3.2",
    "ts-node": "^9.1.1",
    "typedoc": "^0.20.34",
    "typescript": "^4.2.3"
  }
}
