{
  "enclave_file": "{{ enclave_file }}",
  "enclave_type": "{{ enclave_type or "release" }}",
  "node_cert_file": "{{ node_cert_file or "node.pem" }}",
  "node_pid_file": "{{ node_pid_file or "node.pid" }}",
  "node_address_file": "{{ node_address_file }}",
  "rpc_address_file" : "{{ rpc_address_file}}",
  "network_cert_file": "networkcert.pem",
  "node_certificate":
  {
    "subject_name": "CN=CCF Node",
    "subject_alt_names": [],
    "curve_id": "secp384r1",
    "initial_validity_days": 1
  },
  "io_logging_threshold_ns": 10000000,
  "tick_period_ms": 10,
  "worker_threads": 0,
  "node_client_interface": "{{ node_client_interface }}",
  "client_connection_timeout_ms": {{ client_connection_timeout_ms or 2000}},
  "logging":
  {
    "host_log_level": "info",
    "log_format_json": false
  },
  "intervals":
  {
    "sig_tx_interval": 5000,
    "sig_ms_interval": 1000,
    "jwt_key_refresh_interval_s": 1800
  },
  "consensus":
  {
    "type": "CFT",
    "raft_timeout_ms": {{ raft_timeout_ms or 100 }},
    "raft_election_timeout_ms": {{ raft_election_timeout_ms or 5000 }}
  },
  "network": {
    "node_address":
    {
      "hostname": "{{ node_address_hostname }}",
      "port": "{{ node_address_port }}"
    },
    "rpc_interfaces":
    [
      {
        "rpc_address":
        {
          "hostname": "{{ rpc_address_hostname }}",
          "port": "{{ rpc_address_port }}"
        },
        "public_rpc_address":
        {
          "hostname": "{{ public_rpc_address_hostname }}",
          "port": "{{ public_rpc_address_port }}"
        },
        "max_open_sessions_soft": {{ max_open_sessions_soft or 1000 }},
        "max_open_sessions_hard": {{ max_open_sessions_hard or 1010 }}
      }
    ]
  },
  "ledger":
  {
    "ledger_dir": "{{ ledger_dir or "ledger" }}",
    "read_only_ledger_dirs": {{ read_only_ledger_dirs or [] }},
    "ledger_chunk_bytes": {{ ledger_chunk_bytes }}
  },
  "snapshots":
  {
    "snapshot_dir": "0.snapshots",
    "snapshot_tx_interval": {{ snapshot_tx_interval }}
  },
  "memory":
  {
    "circuit_size_shift": 22,
    "max_msg_size_shift": 24,
    "max_fragment_size_shift": 16
  },
  "start":
  {
    "members": [],
    "constitution_files": [],
    "service_configuration":
    {
      "recovery_threshold": 0,
      "max_allowed_node_cert_validity_days": 365
    }
  }
}