{
  "compilerOptions": {
    "lib": ["ES2020"],
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false
  },
  "ts-node": {
    "compilerOptions": {
      "lib": ["ES2015"],
      "target": "ES2015"
    }
  },
  "include": ["src/**/*", "test/**/*", "build/**/*"]
}
